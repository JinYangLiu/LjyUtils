<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--手势解锁view的自定义属性-->
    <declare-styleable name="LjyGestureLockView">
        <attr name="iconPointUncheck" format="reference"/>
        <attr name="iconPointCheck" format="reference"/>
        <attr name="iconPointError" format="reference"/>
        <attr name="iconLinePressed" format="reference"/>
        <attr name="iconLineError" format="reference"/>
    </declare-styleable>
    <!--数字密码view的自定义属性-->
    <declare-styleable name="LjyPwdInputView">
        <attr name="pivBorderColor" format="color"/>
        <attr name="pivBorderWidth" format="dimension"/>
        <attr name="pivBorderRadius" format="dimension"/>
        <attr name="pivPasswordColor" format="color"/>
        <attr name="pivPasswordWidth" format="dimension"/>
        <attr name="pivPasswordRadius" format="dimension"/>
        <attr name="pivPasswordLength" format="integer"/>
    </declare-styleable>
    <!--雷达图的属性-->
    <declare-styleable name="LjyRadarView">
        <attr name="count" format="integer"/>
        <attr name="layerCount" format="integer"/>
        <attr name="mDrawableSize" format="dimension|reference"/>
        <attr name="mDrawablePadding" format="dimension|reference"/>
        <attr name="descPadding" format="dimension|reference"/>
        <attr name="titleSize" format="dimension|reference"/>
        <attr name="dataSize" format="dimension|reference"/>
        <attr name="radarPercent" format="float"/>
        <attr name="startColor" format="color|reference"/>
        <attr name="endColor" format="color|reference"/>
        <attr name="cobwebColor" format="color|reference"/>
        <attr name="lineColor" format="color|reference"/>
        <attr name="dataColor" format="color|reference"/>
        <attr name="singleColor" format="color|reference"/>
        <attr name="titleColor" format="color|reference"/>
        <attr name="radarPointColor" format="color|reference"/>
        <attr name="raderBorderColor" format="color|reference"/>
        <attr name="radiusColor" format="color|reference"/>
        <attr name="raderBorderWidth" format="dimension|reference"/>
        <attr name="pointRadius" format="dimension|reference"/>
        <attr name="enabledBorder" format="boolean"/>
        <attr name="enabledAnimation" format="boolean"/>
        <attr name="enabledShowPoint" format="boolean"/>
        <attr name="enabledPolygon" format="boolean"/>
        <attr name="enabledShade" format="boolean"/>
        <attr name="enabledRadius" format="boolean"/>
        <attr name="enabledText" format="boolean"/>
        <attr name="animDuration" format="integer"/>
    </declare-styleable>
    <!--gifImageView的自定义属性-->
    <declare-styleable name="GIFVIEW">
        <!--gif文件引用-->
        <attr name="gifSrc" format="reference"/>
        <!--是否加载完自动播放-->
        <attr name="authPlay" format="boolean"/>
        <!--播放次放，默认永远播放-->
        <attr name="playCount" format="integer"/>
    </declare-styleable>

    <!--歌词LrcView的自定义属性-->
    <declare-styleable name="LrcView">
        <attr name="lrcTextSize" format="dimension"/>
        <attr name="lrcDividerHeight" format="dimension"/>
        <attr name="lrcNormalTextColor" format="reference|color"/>
        <attr name="lrcCurrentTextColor" format="reference|color"/>
        <attr name="lrcTimelineTextColor" format="reference|color"/>
        <attr name="lrcAnimationDuration" format="integer"/>
        <attr name="lrcLabel" format="string"/>
        <attr name="lrcPadding" format="dimension"/>
        <attr name="lrcTimelineColor" format="reference|color"/>
        <attr name="lrcTimelineHeight" format="dimension"/>
        <attr name="lrcPlayDrawable" format="reference"/>
        <attr name="lrcTimeTextColor" format="reference|color"/>
        <attr name="lrcTimeTextSize" format="dimension"/>
    </declare-styleable>
    <!--图片验证码-->
    <declare-styleable name="Captcha">
        <attr name="src" format="reference"/>
        <attr name="progressDrawable" format="reference"/>
        <attr name="thumbDrawable" format="reference"/>
        <attr name="mode" format="enum">
            <enum name="mode_bar" value="1"/>
            <enum name="mode_nonbar" value="2"/>
        </attr>
        <attr name="max_fail_count" format="integer"/>
        <attr name="blockSize" format="dimension"/>
    </declare-styleable>
    <!--SlidingMenu-->
    <declare-styleable name="SlidingMenu">
        <attr name="mode_sliding" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="viewAbove" format="reference"/>
        <attr name="viewBehind" format="reference"/>
        <attr name="behindOffset" format="dimension"/>
        <attr name="behindWidth" format="dimension"/>
        <attr name="behindScrollScale" format="float"/>
        <attr name="touchModeAbove" format="enum">
            <enum name="margin" value="0"/>
            <enum name="fullscreen" value="1"/>
            <enum name="none" value="2"/>
        </attr>
        <attr name="touchModeBehind" format="enum">
            <enum name="margin" value="0"/>
            <enum name="fullscreen" value="1"/>
            <enum name="none" value="2"/>
        </attr>
        <attr name="shadowDrawable" format="reference"/>
        <attr name="shadowWidth" format="dimension"/>
        <attr name="fadeEnabled" format="boolean"/>
        <attr name="fadeDegree" format="float"/>
        <attr name="selectorEnabled" format="boolean"/>
        <attr name="selectorDrawable" format="reference"/>
    </declare-styleable>
    <!--LjyJigsawView的自定义属性-->
    <declare-styleable name="JigsawView">
        <!--拼图的图片设置-->
        <attr name="jigsawSrc" format="reference"/>
        <attr name="jigsawSelectColor" format="color|reference"/>
    </declare-styleable>
</resources>