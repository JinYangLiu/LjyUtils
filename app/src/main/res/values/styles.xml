<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <!--ActionBar 颜色-->
        <item name="colorPrimary">@color/thin_blue</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/thin_green</item>
        <!--应用中android原始控件的颜色，如editText下划线，开关，radiobutton，progressbar-->
        <item name="colorAccent">@color/thin_red</item>
        <!--右滑退出需要添加下面这行配置-->
        <!--这个设置会在6.0及以上遇到一个问题：
        点击进入应用， 进入最近程序列表界面（长按home 或者菜单键），
        从最近程序列表界面进入， 点击back ， 会先闪一下 最近列表界面，再退出。-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/music_bg</item>
    </style>
    <style name="mainBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#44ffffff</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="btnStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
