<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ljy.ljyutils.activity.BezierActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:background="#dddddd"
                  android:layout_height="match_parent">
        <com.ljy.ljyutils.view.BezierAnimView
            android:layout_width="match_parent"
            android:layout_margin="3dp"
            android:background="@color/white"
            android:layout_height="300dp"/>
        <com.ljy.ljyutils.view.Bezier
            android:layout_width="match_parent"
            android:layout_margin="3dp"
            android:background="@color/white"
            android:layout_height="300dp"/>
        <com.ljy.ljyutils.view.Bezier2
            android:layout_width="match_parent"
            android:layout_margin="3dp"
            android:background="@color/white"
            android:layout_height="300dp"/>
        <com.ljy.ljyutils.view.Bezier3
            android:layout_width="match_parent"
            android:layout_margin="3dp"
            android:background="@color/white"
            android:layout_height="300dp"/>
        <com.ljy.ljyutils.view.BezierWaveView
            android:layout_width="match_parent"
            android:layout_margin="3dp"
            android:background="@color/white"
            android:layout_height="300dp"/>
    </LinearLayout>
</ScrollView>
