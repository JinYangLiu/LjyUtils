<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GlideUtilActivity">

    <HorizontalScrollView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_clearMemory"
                android:text="清除缓存"
                android:onClick="onGlideBtnClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_pauseRequests"
                android:text="暂停请求"
                android:onClick="onGlideBtnClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_resumeRequests"
                android:text="恢复请求"
                android:onClick="onGlideBtnClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_show_iv"
                android:text="显示图片"
                android:onClick="onGlideBtnClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_clear_iv"
                android:text="清除图片"
                android:onClick="onGlideBtnClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </HorizontalScrollView>
    <ScrollView
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <com.ljy.view.LjyZoomImageView
                android:id="@+id/iv_1"
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="90dp"/>
            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="90dp"/>
            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="90dp"/>
            <ImageView
                android:id="@+id/iv_4"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="90dp"/>
            <ImageView
                android:id="@+id/iv_5"
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="90dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
