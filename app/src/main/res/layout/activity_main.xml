                android:id="@+id/btn_fragment"
                android:text="fragment的使用"
                style="@style/mainBtnStyle"/>
            <Button
                android:id="@+id/btn_greenDao"
                android:text="GreenDao的使用"
                style="@style/mainBtnStyle"/>
            <Button
                android:id="@+id/btn_music"
                android:text="音乐播放demo"
                style="@style/mainBtnStyle"/>
            <Button
                android:id="@+id/btn_lottie"
                android:text="Lottie的demo"
                style="@style/mainBtnStyle"/>
            <Button
                android:id="@+id/btn_calendar"
                android:text="calendar的demo"
                style="@style/mainBtnStyle"/>
            <Button
                android:id="@+id/btn_ball"
                android:text="ballView的使用"
                style="@style/mainBtnStyle"/>
            <Button
                android:id="@+id/btn_bezier"
                android:text="贝塞尔曲线的使用"
                style="@style/mainBtnStyle"/>
