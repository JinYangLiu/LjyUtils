                style="@style/mainBtnStyle"/>
            <Button
                android:id="@+id/btn_radarView"
                android:text="雷达图view的使用"
                style="@style/mainBtnStyle"/>
            <Button
                android:id="@+id/btn_argueView"
                android:text="辩论view的使用"
                style="@style/mainBtnStyle"/>
            <Button
                android:id="@+id/btn_vote"
                android:text="投票view的使用"
                style="@style/mainBtnStyle"/>
            <Button
                android:id="@+id/btn_refreshListView"
                android:text="刷新和加载更多ListView的使用"
                style="@style/mainBtnStyle"/>
            <Button
                android:id="@+id/btn_refreshRecycleView"
                android:text="刷新和加载更多RecycleView的使用"
                style="@style/mainBtnStyle"/>
            <Button
                android:id="@+id/btn_picture"
                android:text="拍照和选取图片工具类的使用"
                style="@style/mainBtnStyle"/>
            <Button
                android:id="@+id/btn_gif"
                android:text="gifView的使用"
                style="@style/mainBtnStyle"/>
            <Button
                android:id="@+id/btn_video"
                android:text="videoPlayer的使用"
                style="@style/mainBtnStyle"/>
            <Button
                android:id="@+id/btn_dagger2"
                android:text="dagger2的使用"
                style="@style/mainBtnStyle"/>
            <Button
                android:id="@+id/btn_retrofit"
