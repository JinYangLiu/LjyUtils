<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ljy.ljyutils.activity.SlidingMenuActivity">
    <TextView
        android:text="我是内容啊"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_showMenu"
        android:layout_width="match_parent"
        android:text="显示菜单"
        android:layout_alignParentBottom="true"
        android:onClick="onSlidingMenuBtnClick"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_hideMenu"
        android:layout_width="match_parent"
        android:text="隐藏菜单"
        android:layout_above="@+id/btn_showMenu"
        android:onClick="onSlidingMenuBtnClick"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_toggleMenu"
        android:layout_width="match_parent"
        android:text="显隐菜单"
        android:layout_above="@+id/btn_hideMenu"
        android:onClick="onSlidingMenuBtnClick"
        android:layout_height="wrap_content"/>

</RelativeLayout>
