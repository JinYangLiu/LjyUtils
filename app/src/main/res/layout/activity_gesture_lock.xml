<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_lineimg"
    android:orientation="vertical"
    tools:context="com.ljy.ljyutils.activity.GestureLockActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#99cccccc"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_1"
                android:text="resetPoint"
                android:textAllCaps="false"
                android:onClick="onGestureClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_2"
                android:text="errorState"
                android:textAllCaps="false"
                android:onClick="onGestureClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
    <com.ljy.view.LjyPwdInputView
        android:id="@+id/passwordInputView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:background="#00f1f1f1"
        android:inputType="number"
        android:maxLength="6"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true"
        app:pivBorderColor="#33888888"
        app:pivBorderRadius="10dp"
        app:pivBorderWidth="10dp"
        app:pivPasswordColor="#88888888"
        app:pivPasswordLength="6"
        app:pivPasswordWidth="10dp" />
    <com.ljy.view.LjyGestureLockView
        android:id="@+id/gestureLockView"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
