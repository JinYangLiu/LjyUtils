<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ljy.ljyutils.activity.AppUpdateActivity">
    <TextView
        android:id="@+id/text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_info2"
        android:layout_margin="20dp"
        android:text="aaaaa"
        android:layout_below="@+id/text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_below="@+id/text_info2"
        android:layout_marginTop="8dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_getApkHash"
        android:layout_marginTop="5dp"
        android:onClick="onUpdateBtnClick"
        android:text="取得apkHash"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_update_app"
        android:onClick="onUpdateBtnClick"
        android:text="下载并安装app"
        android:layout_above="@+id/btn_getApkHash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_pause"
        android:onClick="onUpdateBtnClick"
        android:text="暂停下载"
        android:layout_above="@+id/btn_update_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>
