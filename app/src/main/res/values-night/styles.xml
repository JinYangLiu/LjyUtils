<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/thin_blue</item>
        <item name="colorPrimaryDark">@color/thin_green</item>
        <item name="colorAccent">@color/thin_red</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/music_bg</item>
    </style>
    <style name="mainBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#44000000</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
