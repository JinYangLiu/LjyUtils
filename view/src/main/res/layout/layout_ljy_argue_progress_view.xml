<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="#fff"
              android:layout_marginTop="10dp"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/linear_argue_title"
    >

        <TextView
            android:id="@+id/text_argue_title_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fa726d"
            android:textSize="13sp"
            android:text="正方"
        />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
        />

        <TextView
            android:id="@+id/text_argue_title_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#44a2d9"
            android:textSize="13sp"
            android:text="反方"
        />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_argue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:progressDrawable="@drawable/bbs_argue_progressbar_color"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="50"
        android:max="100"
        android:layout_marginTop="15dp"

    />

    <LinearLayout
        android:id="@+id/linear_argue_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
    >

        <TextView
            android:id="@+id/text_argue_num_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="13sp"
            android:text="0人"
        />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
        />

        <TextView
            android:id="@+id/text_argue_num_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="13sp"
            android:text="0人"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_argue_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
    >

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/btn_argue_yes"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/bbs_argue_btnbg_yes_selecter"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgView_argue_yes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bbs_argue_yes"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
            />

            <TextView
                android:id="@+id/text_argue_support_yes"
                android:text="支持正方"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_marginRight="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/bbs_argue_vs"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_gravity="center"
        />

        <LinearLayout
            android:id="@+id/btn_argue_no"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bbs_argue_btnbg_no_selecter"
            android:clickable="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_argue_support_no"
                android:text="支持反方"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imgView_argue_no"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bbs_argue_no"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
            />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_argue_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_argue_content_yes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>

        <View
            android:background="#dcdcdc"
            android:layout_width="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/text_argue_content_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>
